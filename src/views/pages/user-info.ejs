<head>
    <%- include("../include/head.ejs"); %>
  
</head>
<body>
    
    <!-- header -->
  <%- include("../include/header.ejs"); %>

    <div class="user-info-container">
        <div class="user-info-form-container">
            <p class="fs-1 text-center py-4">Chỉnh sửa thông tin tài khoản</p>
            <div class="input-group mb-4 user-info-fullname">
              <span class="input-group-text">Họ và tên</span>
              <input type="text" class="form-control" id="user-info-fullname">
            </div>
            <div class="input-group mb-4 user-info-gender">
              <span class="input-group-text">Giới tính</span>
              <div class="form-check pt-2 mx-2">
                <input class="form-check-input" type="radio" id="gender-male" checked>
                <label class="form-check-label">Nam</label>
              </div>
              <div class="form-check pt-2">
                <input class="form-check-input" type="radio"id="gender-male">
                <label class="form-check-label">Nữ</label>
              </div>
            </div>
            <div class="input-group mb-4 user-info-phone-number">
              <span class="input-group-text">Số điện thoại</span>
              <input type="text" class="form-control" id="user-info-phone-number">
            </div>
            <div class="input-group mb-4 user-info-phone-number">
              <span class="input-group-text">Email</span>
              <input type="text" class="form-control" id="user-info-phone-number">
            </div>
            <div class="input-group mb-4 user-info-phone-number">
              <span class="input-group-text">Địa chỉ</span>
              <input type="text" class="form-control" id="user-info-phone-number">
            </div>
            <button type="button" class="btn btn-primary" id="user-info-save-info-btn">Lưu thông tin</button>
        </div>
    </div>
    <div class="user-info-password-container">
      <div class="user-info-password-configure">
        <p class="fs-1 text-center py-4">Đổi mật khẩu</p>
        <div class="input-group mb-4 user-info-phone-number">
          <span class="input-group-text">Mật khẩu mới</span>
          <input type="text" class="form-control" id="user-info-old-password">
        </div>
        <div class="input-group mb-4 user-info-phone-number">
          <span class="input-group-text">Mật khẩu mới</span>
          <input type="text" class="form-control" id="user-info-new-password">
        </div>
        <div class="input-group mb-4 user-info-phone-number">
          <span class="input-group-text">Xác nhận mật khẩu mới</span>
          <input type="text" class="form-control" id="user-info-confirm-new-password">
        </div>
        <button type="button" class="btn btn-primary" id="user-info-save-password-btn">Lưu mật khẩu</button>
      </div>
    </div>

  <%- include("../include/footer.ejs"); %>

</body>